{
  "name": "@lightness/release-it-slack-notification-plugin",
  "version": "1.0.2-7",
  "description": "Plugin for release-it to notify about release in slack",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "bron test.js",
    "release": "export $(grep -v '^#' .env | xargs) && release-it --dry-run"
  },
  "keywords": [
    "release",
    "release-it",
    "release-it-plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/my/awesome-plugin.git"
  },
  "homepage": "https://github.com/my/awesome-plugin#readme",
  "bugs": "https://github.com/my/awesome-plugin/issues",
  "author": "Uladzimir Aleshka",
  "devDependencies": {
    "bron": "^2.0.3",
    "release-it": "^15.2.0",
    "sinon": "^15.0.1"
  },
  "peerDependencies": {
    "release-it": "^15.2.0"
  },
  "engines": {
    "node": ">=14.9"
  },
  "release-it": {
    "hooks": {
      "before:init": "npm test"
    }
  },
  "dependencies": {
    "node-fetch": "^3.3.0",
    "slackify-markdown": "^4.3.1"
  }
}
